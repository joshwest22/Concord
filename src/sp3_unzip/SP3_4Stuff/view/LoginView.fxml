<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="250.0" prefWidth="575.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <center>
      <BorderPane>
         <center>
            <VBox alignment="CENTER" prefHeight="250.0" prefWidth="450.0" BorderPane.alignment="CENTER">
               <children>
                  <Label id="loginMainLabel" fx:id="loginMainLabel" alignment="TOP_CENTER" prefHeight="17.0" prefWidth="536.0" text="Welcome! Please login">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Username">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField id="loginUsername" fx:id="loginUsername" promptText="Enter Username">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <Label text="Password">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField id="loginPassword" fx:id="loginPassword" promptText="Enter password" />
                  <Button id="loginButton" fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="26.0" prefWidth="314.0" text="Log in!">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button id="makeAccountButton" fx:id="makeAccountButton" alignment="CENTER" mnemonicParsing="false" onAction="#onMakeAccountClicked" prefHeight="26.0" prefWidth="165.0" text="No account? Make one">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
