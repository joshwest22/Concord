<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProfilePreviewController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="viewProfileImage" fx:id="viewProfileImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="CENTER">
               <children>
                  <Label id="viewProfileUsername" fx:id="viewProfileUsername" text="PersonUsername" />
                  <Label id="viewProfileUserID" fx:id="viewProfileUserID" text="UserID" />
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Real name:" />
                  <Label id="viewProfileRealName" fx:id="viewProfileRealName" text="PersonName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Bio:" />
                  <Label id="viewProfileBio" fx:id="viewProfileBio" text="PersonBio" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Online?:" />
                  <Label id="viewProfileOnline" fx:id="viewProfileOnline" text="Label" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <Button id="viewProfileCloseButton" fx:id="viewProfileCloseButton" mnemonicParsing="false" onAction="#onClickedCloseButton" text="Close" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
