<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CreateGroupController">
   <center>
      <VBox styleClass="light-background" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Give your new server a personality with a name. You can always change it later" textAlignment="CENTER" wrappingWidth="350.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            <VBox>
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Group Name" />
                        <TextField id="serverNameTextField" fx:id="serverNameTextField" alignment="CENTER" prefHeight="18.0" prefWidth="500.0" promptText="Enter Group Name" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Group ID" />
                        <TextField id="serverIDTextField" fx:id="serverIDTextField" alignment="CENTER" prefHeight="18.0" prefWidth="500.0" promptText="Enter Group ID" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <Button id="backButton" fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClickBackButton" prefHeight="43.0" prefWidth="79.0" styleClass="backButton" text="Back" />
                     </children>
                     <padding>
                        <Insets top="12.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <Button id="enterButton" fx:id="enterButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClickEnterButton" prefHeight="43.0" prefWidth="79.0" styleClass="submitButton" stylesheets="@stylesheet.css" text="Enter" />
                     </children>
                     <padding>
                        <Insets top="12.0" />
                     </padding>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <VBox alignment="CENTER" styleClass="light-background" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Create A Group">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </VBox>
   </top>
</BorderPane>
