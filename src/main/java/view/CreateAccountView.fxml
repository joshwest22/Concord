<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CreateAccountController">
   <center>
      <BorderPane styleClass="background" stylesheets="@stylesheet.css">
         <top>
            <Label id="createAccountLabel" fx:id="createAccountLabel" styleClass="text" text="Create your account!" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox alignment="CENTER" prefHeight="230.0" prefWidth="450.0" styleClass="background" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" styleClass="text" text="Username">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField id="createAccountUsername" fx:id="createAccountUsername" alignment="CENTER" promptText="New username">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin></TextField>
                  <Label alignment="CENTER" styleClass="text" text="Real Name">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TextField id="realNameTextField" fx:id="realNameTextField" alignment="CENTER" promptText="Real Name">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin></TextField>
                  <Label alignment="CENTER" styleClass="text" text="Password">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField id="createAccountPassword" fx:id="createAccountPassword" alignment="CENTER" promptText="New password">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin></TextField>
                  <Button id="createAccountButton" fx:id="createAccountButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClickSignUp" prefHeight="26.0" prefWidth="268.0" text="Sign up">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Button>
                  <Button id="backButton" fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" layoutX="101.0" layoutY="176.0" mnemonicParsing="false" onAction="#onClickBackButton" prefHeight="25.0" prefWidth="70.0" styleClass="backButton" text="Back">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin></Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
