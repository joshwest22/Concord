<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="250.0" prefWidth="575.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <center>
      <BorderPane style="-fx-background-color: #350147;">
         <center>
            <VBox alignment="CENTER" prefHeight="250.0" prefWidth="450.0" BorderPane.alignment="CENTER">
               <children>
                  <Label id="loginMainLabel" fx:id="loginMainLabel" alignment="TOP_CENTER" prefHeight="17.0" prefWidth="536.0" text="Welcome! Please login" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Username" textFill="#fffdfd">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Label>
                  <TextField id="loginUsername" fx:id="loginUsername" alignment="CENTER" promptText="Enter Username">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Label text="Password" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField id="loginPassword" fx:id="loginPassword" alignment="CENTER" promptText="Enter Password">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font></PasswordField>
                  <Button id="loginButton" fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="26.0" prefWidth="314.0" style="-fx-background-color: #2C588E; -fx-background-radius: 6;" styleClass=".button" text="Login" textFill="#f7f7f7">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button id="makeAccountButton" fx:id="makeAccountButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onMakeAccountClicked" style="-fx-background-color: #2C588E; -fx-background-radius: 6;" text="No account? Make one!" textFill="WHITE">
                     <VBox.margin>
                        <Insets bottom="8.0" top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
